<div class="contents-row">
  <div class="task-post">
  <a class="post" href="/tasks/new">タスクを追加する</a>
    <% @tasks.each do |task| %>
      <div class="task-list">
        <label>
          <input type="checkbox" onchange="completeTask(event)">
          <%= task.task_name %>
          <%= task.deadline.strftime("%m/%d %H:%M") %>
        </label>
        <div class="task-edit">
          <button onclick="editTask(event)">編集</button>
          <button onclick="deleteTask(event)">削除</button>
        </div>
      </div>
    <% end %>
  </div>
</div>