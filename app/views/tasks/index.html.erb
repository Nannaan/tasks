<div class="contents-row">
  <div class="task-post">
  <a class="post" href="/tasks/new">タスクを追加する</a>
    <% @tasks.each do |task| %>
      <div class="task-list">
        <label>
          <input type="checkbox" onchange="completeTask(event)">
          <span class="task-name"><%= task.task_name %></span>
          <%# タスク期限 %>
          <% if task.deadline.present? %>
            <span class="deadline"><%= task.deadline.strftime("%m/%d %H:%M") %></span>
          <% else %>
            <span class="deadline"></span>
          <% end %>
          <%# 所要時間 %>
          <% if task.required_time.present? %>
            所要時間<span class="required_time"><%= task.required_time %></span>
          <% else %>
            <span class="required_time"></span>
          <% end %>
        </label>
        <div class="task-edit">
          <button><%= link_to '編集', edit_task_path(task.id), method: :get %></button>
          <button><%= link_to '削除', task_path(task.id), method: :delete, data: { confirm: '本当に削除しますか？' } %></button>
        </div>
      </div>
    <% end %>
  </div>
</div>