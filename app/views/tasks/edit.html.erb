<div class="container">
  <div class="contents-row">
    <div class="task-post">
      <h1 class='add-task-header-text'>
      タスクを編集する
      </h1>
      <%= form_with(model: @task, local: true) do |form| %>
        <div class="form-group">
          <div class='form-text-wrap'>
            <label class="form-text">タスク名</label>
            <span class="indispensable">必須</span>
          </div>
          <%= form.text_field :task_name, placeholder: "タスク名を入力してください" %>
        </div>
        <div class="form-group">
          <div class='form-text-wrap'>
            <label class="form-text">期限</label>
          </div>
          <%= form.datetime_field :deadline %>
        </div>
        <div class="form-group">
          <div class='form-text-wrap'>
            <label class="form-text">所要時間</label>
          </div>
          <%= form.text_field :required_time, placeholder: "例：5分、1時間" %>
        </div>
        <div class='add-btn'>
        <%= form.submit "完了" %>
        </div>
      <% end %>
    </div>
  </div>
</div>